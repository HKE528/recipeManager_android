<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_recipe"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/list_item_effect"
    android:clickable="true"
    >

    <ImageView
        android:id="@+id/img_recipe"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:layout_margin = "5dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:src="@drawable/ic_action_img">
    </ImageView>

    <TextView
        android:id="@+id/txt_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_recipe"
        android:layout_margin = "15dp"
        android:textSize="35dp"
        android:text="김치찌게"
        >
    </TextView>

    <TextView
        android:id="@+id/txt_recipe_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_recipe"
        android:layout_below="@+id/txt_recipe_name"
        android:layout_marginLeft="15dp"
        android:textSize="25dp"
        android:text="한식"
        >
    </TextView>

</RelativeLayout>