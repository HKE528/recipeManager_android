<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item"
    >

    <include
        layout="@layout/toolbar"
        android:id="@+id/show_recipe_name"
        >
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/img_show"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:src="@drawable/ic_action_img"
                android:background="@drawable/edit_text_outline"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="재료 ▼ "
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:textSize="26sp"/>

                <TextView
                    android:id="@+id/txt_show_ingredient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. 재료1\n2. 재료2"
                    android:textSize="22sp"
                    android:background="@drawable/edit_text_outline"
                    android:padding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="레시피 ▼"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:textSize="26sp"/>

                <TextView
                    android:id="@+id/txt_show_recipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. 레시피1\n2. 레시피2"
                    android:textSize="22sp"
                    android:background="@drawable/edit_text_outline"
                    android:padding="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>