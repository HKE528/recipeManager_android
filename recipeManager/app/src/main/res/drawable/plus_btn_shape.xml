<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#4DFFFFFF"> <!-- Ripple Effect 색상 -->

    <!-- 배경색 -->
    <item android:id="@android:id/background">
        <shape>
            <corners
                android:radius="100dp"
                />

            <solid
                android:color="@color/sky_blue"
                />

            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"
                />

            <size
                android:width="65dp"
                android:height="65dp"
                />
        </shape>
    </item>
</ripple>

